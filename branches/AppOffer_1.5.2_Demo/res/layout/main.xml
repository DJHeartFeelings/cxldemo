<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:scrollbars="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android" >
        

    <LinearLayout
            android:orientation="vertical"
            android:id="@+id/AdLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>

    <TextView
            android:id="@+id/PointsTextView"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:visibility="visible"
            android:gravity="center" />

    <Button
            android:id="@+id/OffersButton"
            android:text="推荐列表"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:visibility="visible" />
    
	<Button
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="推送广告"
            android:id="@+id/pushAdButton"
            android:visibility="visible" />

    <Button
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="消费积分(10)"
            android:id="@+id/SpendPointsButton"
            android:visibility="visible" />
    
    <Button
            android:id="@+id/awardButton"
            android:text="奖励积分(10)"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:visibility="visible" />
                   
    <Button
            android:id="@+id/PointsButton"
            android:text="查询积分"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:visibility="visible" />
            
    <Button
            android:id="@+id/Feedback"
            android:text="用户反馈"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:visibility="visible" />
    
	<Button
            android:id="@+id/OwnsButton"
            android:text="自家应用"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:visibility="visible" />
            
    <TextView
            android:id="@+id/SDKVersionView"
            android:text="点数: "
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:visibility="visible"
            android:gravity="center" />


</LinearLayout>
