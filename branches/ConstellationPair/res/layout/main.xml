<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:orientation="vertical">
		<TextView android:text="请在下面选择两个星座，查询他们的配对情况哦："
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#FF69B4" android:textSize="18sp"
			android:paddingTop="10dip" android:paddingBottom="10dip" />
		<Spinner android:id="@+id/firstConstellation"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:drawSelectorOnTop="true" android:textSize="18sp" />
		<Spinner android:id="@+id/secondConstellation"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:drawSelectorOnTop="true" android:textSize="18sp" />
		<Button android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:text="查               询"
			android:id="@+id/queryButton" android:visibility="visible"
			android:drawableLeft="@drawable/query" android:drawableRight="@drawable/query"
			android:textSize="20sp" android:paddingTop="10dip"
			android:paddingBottom="10dip" />
		<TextView
			android:text="由星座来分析你和另一半在基本性格上的适配度........\n\n它可以帮助您看清彼此的歧异，避免相处时踩到地雷区，希望各位都能知己知彼、相处愉快！"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textColor="#87CEEB" android:textSize="18sp" android:padding="15dip" android:background="@drawable/bg"/><!-- 
		<ImageView android:src="@drawable/bg" android:scaleType="centerInside"
			android:layout_width="fill_parent" android:layout_height="wrap_content" /> -->
	</LinearLayout>
</LinearLayout>
