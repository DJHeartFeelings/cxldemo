<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:padding="10dip">
	<TableLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal" android:padding="5dip"
		android:layout_weight="5">
		<TableRow>
			<TextView android:id="@+id/PointsTextView"
				android:layout_height="wrap_content" android:layout_width="fill_parent"
				android:visibility="visible" android:gravity="center"
				android:textSize="20dip" android:padding="5dip" />
			<Button android:id="@+id/selectSpeed" android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:visibility="visible"
				android:gravity="center" android:text="单击选择更快游戏速度！！" />
		</TableRow>
	</TableLayout>

	<TextView android:id="@+id/score" android:layout_width="fill_parent"
		android:layout_height="50dip" android:text="看看你有多快？" android:textSize="20dip"
		android:layout_weight="2" />

	<TableLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal" android:padding="5dip"
		android:layout_weight="5">
		<TableRow>
			<ImageView android:id="@+id/image1" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:src="@drawable/window"
				android:padding="5dip" />
			<ImageView android:id="@+id/image2" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:src="@drawable/window"
				android:padding="5dip" />
			<ImageView android:id="@+id/image3" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:src="@drawable/window"
				android:padding="5dip" />
		</TableRow>
		<TableRow>
			<ImageView android:id="@+id/image4" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:src="@drawable/window"
				android:padding="5dip" />
			<ImageView android:id="@+id/image5" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:src="@drawable/window"
				android:padding="5dip" />
			<ImageView android:id="@+id/image6" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:src="@drawable/window"
				android:padding="5dip" />
		</TableRow>
		<TableRow>
			<ImageView android:id="@+id/image7" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:src="@drawable/window"
				android:padding="5dip" />
			<ImageView android:id="@+id/image8" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:src="@drawable/window"
				android:padding="5dip" />
			<ImageView android:id="@+id/image9" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:src="@drawable/window"
				android:padding="5dip" />
		</TableRow>
	</TableLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" android:gravity="right">
		<Button android:id="@+id/start" android:layout_width="80dip"
			android:layout_height="wrap_content" android:text="@string/start" />
		<!-- <Button android:id="@+id/end" android:layout_width="80dip" android:layout_height="50dip" 
			android:text="@string/end" /> -->
		<Button android:id="@+id/OwnsButton" android:text="看看本程序相关的免费应用"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:visibility="visible" />
	</LinearLayout>

</LinearLayout>
