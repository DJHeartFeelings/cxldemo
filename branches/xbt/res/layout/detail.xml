<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:paddingTop="5dip">
	<Button android:id="@+id/OffersButton" android:visibility="visible"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="其他推荐的免费应用..." />
	<Button android:id="@+id/returnButton" android:text="返回"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:visibility="visible" />
	<LinearLayout android:id="@+id/AdLinearLayout"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center_horizontal" />
	<ScrollView android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<TextView android:id="@+id/content" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:focusable="false" />
	</ScrollView>

</LinearLayout>
