<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.cxl.smspopup" android:versionName="1.1.0"
	android:versionCode="116">
	<uses-sdk android:minSdkVersion="3" android:targetSdkVersion="4" />
	<application android:label="@string/app_name" android:icon="@drawable/smspopup">
		<activity android:name="net.everythingandroid.smspopup.SmsPopupConfigActivity"
			android:label="@string/app_name" android:launchMode="singleTask"
			android:configChanges="keyboardHidden|orientation">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="net.everythingandroid.smspopup.ConfigContactsActivity"
			android:label="@string/pref_contacts_title" android:launchMode="singleTop"
			android:configChanges="keyboardHidden|orientation">
		</activity>
		<activity android:name="net.everythingandroid.smspopup.ConfigPerContactActivity"
			android:label="@string/pref_contacts_title" android:launchMode="singleTop"
			android:configChanges="keyboardHidden|orientation">
		</activity>
		<activity
			android:name="net.everythingandroid.smspopup.ConfigPresetMessagesActivity"
			android:label="@string/pref_message_presets_title"
			android:launchMode="singleTop" android:configChanges="keyboardHidden|orientation">
		</activity>
		<activity android:name="net.everythingandroid.smspopup.SmsPopupActivity"
			android:theme="@android:style/Theme.Dialog" android:launchMode="singleTask"
			android:configChanges="keyboardHidden|orientation"
			android:screenOrientation="user" android:taskAffinity="net.everythingandroid.smspopup.popup">
		</activity>
		<receiver android:name="net.everythingandroid.smspopup.SmsReceiver">
			<intent-filter>
				<action android:name="android.provider.Telephony.SMS_RECEIVED" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.provider.Telephony.WAP_PUSH_RECEIVED" />
				<data android:mimeType="application/vnd.wap.mms-message" />
			</intent-filter>
			<intent-filter>
				<action android:name="net.everythingandroid.smspopup.MESSAGE_RECEIVED" />
			</intent-filter>
			<intent-filter>
				<action android:name="com.android.mms.transaction.MESSAGE_SENT" />
			</intent-filter>
		</receiver>
		<receiver android:name="net.everythingandroid.smspopup.ExternalEventReceiver">
			<intent-filter>
				<action android:name="net.everythingandroid.smspopup.ENABLE" />
			</intent-filter>
			<intent-filter>
				<action android:name="net.everythingandroid.smspopup.DISABLE" />
			</intent-filter>
			<intent-filter>
				<action android:name="net.everythingandroid.smspopup.DONATED" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.DOCK_EVENT" />
			</intent-filter>
		</receiver>
		<receiver android:name="net.everythingandroid.smspopup.ClearAllReceiver" />
		<receiver android:name="net.everythingandroid.smspopup.ReminderReceiver" />
		<service android:name="net.everythingandroid.smspopup.SmsPopupUtilsService" />
		<service android:name="net.everythingandroid.smspopup.SmsReceiverService" />
		<service android:name="net.everythingandroid.smspopup.ReminderReceiverService" />
		<service android:name="net.everythingandroid.smspopup.SmsMonitorService" />

		<activity android:name="com.waps.OffersWebView"
			android:configChanges="keyboardHidden|orientation" />
		<meta-data android:name="WAPS_ID" android:value="57015dd0efab44ffb6c5fd2a4c83579f" />
		<meta-data android:name="WAPS_PID" android:value="WAPS" />

	</application>
	<uses-permission android:name="android.permission.READ_SMS" />
	<uses-permission android:name="android.permission.WRITE_SMS" />
	<uses-permission android:name="android.permission.SEND_SMS" />
	<uses-permission android:name="android.permission.RECEIVE_SMS" />
	<uses-permission android:name="android.permission.RECEIVE_MMS" />
	<uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.GET_TASKS" />
	<uses-permission android:name="android.permission.READ_LOGS" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-feature android:name="android.hardware.telephony" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	<uses-permission android:name="android.permission.GET_TASKS" />
</manifest>